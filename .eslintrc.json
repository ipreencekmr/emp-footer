{
  "parser": "@babel/eslint-parser",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": ["react", "import", "jsx-a11y"],
  "rules": {
    "react/prop-types": 0,
    "indent": ["error", 4],
    "linebreak-style": 1,
    "quotes": ["error", "double"],
    "react/jsx-curly-spacing": [2, 
    {
      "when": "always", 
      "spacing": {
        "objectLiterals": "never"
      }
    }]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
   "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".es.js"]
      }
    }
  }
}